<UserControl x:Class="EPanicClient.Views.About"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI" 
             mc:Ignorable="d" 
             
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="ePanic Button Enterprise" Style="{StaticResource Heading2}" Margin="0,15,0,0" /> 
                <TextBlock Text="{Binding FileVersion}" Margin="0,8" TextWrapping="Wrap" />                
                <mui:BBCodeBlock BBCode="[url=http://www.epanicbutton.com]http://www.epanicbutton.com[/url]" Margin="0,10,0,8" TextWrapping="Wrap"  />
                <mui:BBCodeBlock BBCode="[url=https://eq.epanicbutton.com]https://eq.epanicbutton.com[/url]" Margin="0,0,0,8" TextWrapping="Wrap"  />
                <TextBlock Text="Copyright © 2016 – ePanic Button LLC" Margin="0,0,0,8" TextWrapping="Wrap" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
